<% if @records.any? %>
<h2 class="listing"><%=t :listing_records%></h2>
<table>
  <tr>
    <th></th>
    <th><%= t "activerecord.attributes.record.name" %></th>
    <th colspan="4"></th>
  </tr>

  <% @records.each do |record| %>
  <tr>
    <td><img src="/assets/Linux_Polska_blog.png" width="28px" height="28px"></td>
    <td><%= record.name %></td>
    <td><%= link_to t(:show), record_path(record) %></td>
    <td><%= link_to t(:edit), edit_record_path(record) %></td>
    <td><%= link_to t(:destroy), record_path(record), method: :delete ,data: {confirm: t("delete_confirmation")}%></td>
  </tr>
  <% end %>
</table>
<% else %>
<h2><%=t :no_records%></h2>
<% end %>