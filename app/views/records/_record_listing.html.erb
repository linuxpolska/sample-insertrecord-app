<% if @records.any? %>
  <h2><%=t :listing_records%></h2>
  <table>
    <tr>
      <th><%= t "activerecord.attributes.record.name" %></th>
      <th colspan="3"></th>
    </tr>
  
    <% @records.each do |record| %>
      <tr>
        <td><%= record.name %></td>
        <td><%= link_to t(:show), record_path(record) %></td>
        <td><%= link_to t(:edit), edit_record_path(record) %></td>
        <!--
          <td><%= link_to t(:destroy), record_path(record), method: :delete %></td>
        -->
      </tr>
    <% end %>
  </table>
<% else %>
  <h2><%=t :no_records%></h2>
<% end %>